

<main>:
	orientation: 'horizontal'

	plotbox: plot_box.__self__
	wavebox: wave_box.__self__
	#demolabel: demo_label.__self__
	#speedbutton: speed_button.__self__
	#statuslabel: status_label.__self__
	#menu: menu.__self__

	#pottab: pot_tab.__self__
	#potmenu: pot_menu.__self__

	#parttab: part_tab.__self__
	#partmenu: part_menu.__self__
	
	BoxLayout:
		id: wave_box
		size_hint: (None, 1)
		size: (self.height, self.height)
	#	on_touch_down: root.update_parameters(args[1])
	BoxLayout:
		orientation: 'vertical'
		size_hint: (0.25, 1)
		
		BoxLayout:
			size_hint: (1, 0.25)
			orientation: 'horizontal'
			Button:
				text: 'Play'
				on_press: root.play()
			Button:
				text: 'Pause'
				on_press: root.pause()
			#Button:
			#	text: 'Reset'
			#	on_press: root.stop()
			
		
		BoxLayout:
			size_hint: (1, 0.1)
			orientation: 'horizontal'
			Label:
				text: 'Demos'
		
		BoxLayout:
			size_hint: (1, 0.15)
			orientation: 'horizontal'
			Button:
				text: 'Demo1'
				on_press: root.demo1()
		
		BoxLayout:
			size_hint: (1, 0.15)
			orientation: 'horizontal'
			Button:
				text: 'Demo2'
				on_press: root.demo2()
				
		BoxLayout:
			size_hint: (1, 0.15)
			orientation: 'horizontal'
			Button:
				text: 'Demo3.1'
				on_press: root.demo3()
			Button:
				text: 'Demo3.2'
				on_press: root.demo31()
		BoxLayout:
			size_hint: (1, 0.15)
			orientation: 'horizontal'
			Button:
				text: 'Demo4'
				on_press: root.demo4()
		BoxLayout:
			size_hint: (1, 0.15)
			orientation: 'horizontal'
			Button:
				text: 'Demo5.1'
				on_press: root.demo5()
			Button:
				text: 'Demo5.2'
				on_press: root.demo51()
		
		BoxLayout:
			size_hint: (1, 0.1)
			orientation: 'horizontal'
			Label:
				text: 'Data'
		
		BoxLayout:
			size_hint: (1, 0.3)
			orientation: 'horizontal'
			Button:
				text: 'System'
				on_press: root.popexp()
		
		BoxLayout:
			size_hint: (1, 0.3)
			orientation: 'horizontal'
			Button:
				text: 'Graphics'
				on_press: root.pop()

		BoxLayout:
			size_hint: (1, 0.15)
			orientation: 'horizontal'
			Label:
				text: 'Potential'
		
		BoxLayout:
			canvas.before:
				Color:
					rgba: .5, .5, .5, 1
				Rectangle:
					pos: self.pos
					size: self.size
					
			id: plot_box
			size_hint: (1, 1)
