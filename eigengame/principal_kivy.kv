<MainWindow>
	FloatLayout: #creem una layout
		size: root.width, root.height #layout occupies all image
	    Image:#afegim una imatge
    		source: "graphs/fondo2.jfif"
    		allow_stretch: True
    		keep_ratio: False
    	

		Label: #afegim text 
			font_size:20
			text: "Welcome to EIGENgame.\n To learn how to design your wave function press on trainner. " 
			multiline: True
			pos_hint: {"center_x":0.5,"center_y":0.9} #diccionari:{"x","y","top","bottom","left","right"}
			size_hint_x: 0.6
			size_hint_y:0.1 
			halign:"center"
			valign:"middle" #lletra centrada
        Button: #afegim un botó 
        	font_size:19
			color:0.3,0.6,0.7,1 #tots els buttons seran aixi
			text: "TRAINER"
			pos_hint: {"center_x":0.5,"center_y":0.6} #diccionari:{"x","y","top","bottom","left","right"}
			size_hint_x: 0.5
			size_hint_y: 0.15
            halign:"center"
			valign:"middle" #lletra centrada
			on_release: 
				app.root.current="trainer" #quan el deixem anar canviem de pantalla 
				root.manager.transition.direction="left" #editem la transicio
		Button: #afegim un botó 
        	font_size:19
			color:0.3,0.6,0.7,1 #tots els buttons seran aixi
			text: "LET'S PLAY"
			pos_hint: {"center_x":0.5,"center_y":0.4} #diccionari:{"x","y","top","bottom","left","right"}
			size_hint_x: 0.5
			size_hint_y:0.15
            halign:"center"
			valign:"middle" #lletra centrada
            on_release: 
				app.root.current="game" #quan el deixem anar canviem de pantalla 
				root.manager.transition.direction="left" #editem la transicio
	

<TrainerWindow>
	float_plot: float_plot
	measure_layout: measure_layout
	button0: E0 
	button1: E1
	button2: E2 
	button3: E3
	button4: E4
	button_free: bvf
	button_harmonic: bvh
	button_barrier: bvb
	button_water: water

	FloatLayout: #creem una layout
		size: root.width, root.height
		GridLayout: #FOR PLOTTING 
			id: float_plot
			cols: 1
			rows: 1
			size_hint_x: 1
			size_hint_y: 0.64
			pos_hint:{"x":0,"y":0.16}
			canvas.before: 
				Color: 
					rgba: (1,1,1,1) 
				Rectangle: 
					size: self.size 
					pos: self.pos
		FloatLayout: #For buttons 
			size_hint_x: 1 
			size_hint_y:0.2
			pos_hint:{"x":0,"y":0.8}

            BoxLayout: #we create a box layout for energy buttons
            	size_hint_x: 0.3
				size_hint_y:0.3
				pos_hint:{"x":0.0,"top":1}
				orientation: "horizontal"
            	#add buttons for Energy
	            Button: #E0 
	            	id: E0
	        		font_size:14
					color: 0.3,0.6,0.7,1
					background_color: (1,0,0,1)
					text: "E0"
	            	halign:"center"
					valign:"middle" #lletra centrada
					on_release: 
						root.value_0()
						root.plot_energy()

						
				Button: #E1
					id: E1
	        		font_size:14
					color:0.3,0.6,0.7,1 #tots els buttons seran aixi
					text: "E1"
	            	halign:"center"
					valign:"middle" #lletra centrada
					on_release: 
						root.value_1()
						root.plot_energy()  
				
						
				Button: #E2
				    id: E2
	        		font_size:14
					color:0.3,0.6,0.7,1 #tots els buttons seran aixi
					text: "E2"
	            	halign:"center"
					valign:"middle" #lletra centrada
					on_release: 
						root.value_2() 
						root.plot_energy() 
				Button: #E3
					id: E3
	        		font_size:14
					color:0.3,0.6,0.7,1 #tots els buttons seran aixi
					text: "E3"
	            	halign:"center"
					valign:"middle" #lletra centrada
					on_release: 
						root.value_3() 
						root.plot_energy()
				Button: #E4
					id: E4
	        		font_size:14
					color:0.3,0.6,0.7,1 #tots els buttons seran aixi
					text: "E4"
	            	halign:"center"
					valign:"middle" #lletra centrada
					on_release: 
						root.value_4() 
						root.plot_energy() 

			FloatLayout: #we create a FloatLayout for potential buttons 
				size_hint_x: 1
				size_hint_y:0.7
				pos_hint:{"x":0.0,"y":0.0}
            	#add buttons for Potential 
            	
            	Button: #Freepartcile 
            		id: bvf
            		size_hint_x: 0.05
					size_hint_y:1
					pos_hint:{"x":0.0,"y":0.0}
            		font_size:12
					color:0.3,0.6,0.7,1 #tots els buttons seran aixi
					background_color: (1,0,0,1)
					text: "Free"
	            	halign:"center"
					valign:"middle" #lletra centrada
					on_release: 
						root.free_particle()
						
	
            	Button: #HARMONIC POTENTIAL 
            		id: bvh
            		size_hint_x: 0.25
					size_hint_y:0.5
					pos_hint:{"x":0.05,"y":0.5} 
	        		font_size:12
					color:0.3,0.6,0.7,1 #tots els buttons seran aixi
					text: "Harmonic V:\n K [0,10]eV/A^2    x_0 [-5,5]A "
	            	halign:"center"
					valign:"middle" #lletra centrada
					on_release: 
						root.harmonic_potential()
							
				Slider: #to choose the hooke constant
					size_hint_x: 0.25/2
					size_hint_y:0.5
					pos_hint:{"x":0.05,"y":0.0}
					min: 0
					max: 10
					step: 1
					orientation: "horizontal"
					on_value: root.slider_value_k(*args) #we call a function that saves the value of the slide

				Slider: #to choose x_0
					size_hint_x: 0.25/2
					size_hint_y:0.5
					pos_hint:{"x":7.0/40.0,"y":0.0}
					min: -5
					max: 5
					step: 0.5
					orientation: "horizontal"
					on_value: root.slider_x0(*args) #we call a function that saves the value of the slide



			Button: #POTENTIAL BARRIER
			    size_hint_x: 0.32
				size_hint_y:0.65
				pos_hint:{"x":0.3,"y":0.35}
				id: bvb
	        	font_size:12
				color:0.3,0.6,0.7,1 #tots els buttons seran aixi
				text: "BARRIER\n LEFT [-5,5] A   RIGHT [-5,5] A \n V [0,30] eV"
	            halign:"center"
				valign:"middle" #lletra centrada
				on_release: 
					root.barrier()
					 
			Slider: #to choose the left of the barrier
			    size_hint_x: 0.16
				size_hint_y:0.35
				pos_hint:{"x":0.3,"y":0}	
				min: -5
				max: 5
				step: 0.5
				orientation: "horizontal"
				on_value: root.left_barrier(*args) #we call a function that saves the value of the slide
            Slider: #to choose the right of the barrier
			    size_hint_x: 0.16
				size_hint_y:0.36
				pos_hint:{"x":0.45,"y":0}	
				min: -5
				max: 5
				step: 0.5
				orientation: "horizontal"
				on_value: root.right_barrier(*args) #we call a function that saves the value of the slide
			Slider: #to choose the vertical 
				size_hint_x:0.03
				size_hint_y:1
				pos_hint:{"x":0.62,"y":0}
				min: 0
				max: 30
				step: 1
				orientation: "vertical"
				on_value: root.V_barrier(*args) #we call a function that saves the value of the slide


			Button: # well 
			    size_hint_x: 0.32
				size_hint_y:0.65
				pos_hint:{"x":0.65,"y":0.35}
				id: water
	        	font_size:12
				color:0.3,0.6,0.7,1 #tots els buttons seran aixi
				text: "WELL \n LEFT [-5,5], RIGHT [-5,5] \n V [0,30] eV"
	            halign:"center"
				valign:"middle" #lletra centrada
				on_release: 
					root.water_well()
					

			Slider: #to choose the left of the barrier
			    size_hint_x: 0.16
				size_hint_y:0.35
				pos_hint:{"x":0.65,"y":0}	
				min: -5
				max: 5
				step: 0.5
				orientation: "horizontal"
				on_value: root.left_water(*args) #we call a function that saves the value of the slide
            Slider: #to choose the right of the barrier
			    size_hint_x: 0.16
				size_hint_y:0.35
				pos_hint:{"x":0.81,"y":0}	
				min: -5
				max: 5
				step: 0.5
				orientation: "horizontal"
				on_value: root.right_water(*args) #we call a function that saves the value of the slide
			Slider: #to choose the vertical 
				size_hint_x:0.025
				size_hint_y:1
				pos_hint:{"x":0.97,"y":0}	
				min: 0
				max: 30
				step: 1
				orientation: "vertical"
				on_value: root.V_water(*args) #we call a function that saves the value of the slide


        FloatLayout: #FOR THE MEASURMENT OF THE PARTICLE  
			id: measure_layout
			size_hint_x: 0.925
			size_hint_y: 0.16
			pos_hint:{"x":0,"y":0}
			canvas.before: 
				Color: 
					rgba: (0,0,0,1) #black canvas as a background 
				Rectangle: 
					size: self.size 
					pos: self.pos
			FloatLayout: #redlines left 
				size_hint_x: 0.17
				size_hint_y: 1
				pos_hint:{"x":0,"y":0}
				Image: #we put an image
					source: "graphs/redlines.png"
					allow_stretch: True
    				keep_ratio: False
    		BoxLayout: #redlines right 
				size_hint_x: 0.065
				size_hint_y: 1
				pos_hint:{"right":1,"y":0}
				Image: #we put an image
					source: "graphs/redlines_1.png"
					allow_stretch: True
    				keep_ratio: False
    		FloatLayout: #nonforbiden zone 
    			id: measure_layout
				size_hint_x: 0.765
				size_hint_y: 1
				pos_hint:{"x":0.17,"y":0}
				canvas.before: 
					Color: 
						rgba: (11/255, 3/255,74/255,1) #blue canvas as a background 
					Rectangle: 
						size: self.size 
						pos: self.pos
				

				



		Button: #PLOT WAVE FUNCTION BUTTON 
			size_hint_x: 0.075
        	size_hint_y: 0.08
        	pos_hint:{"right":1,"y":0.16}
        	color:0.3,0.6,0.7,1 #tots els buttons seran aixi
            halign:"center"
			valign:"middle" #
			on_release: 
				root.plot_wave_function() #we plot the
			Image: #we put an image inside the button 
				source: "graphs/wave_icon.png"
				center_x:self.parent.center_x
				center_y:self.parent.center_y #we put the image in the middle of the button
				size: self.parent.width, self.parent.height  

		Button: #MEASURE BUTTON
			size_hint_x: 0.075
        	size_hint_y: 0.08
        	pos_hint:{"right":1,"y":0.08}
        	color:0.3,0.6,0.7,1 #tots els buttons seran aixi
            halign:"center"
			valign:"middle" #
			on_release: 
				root.measure() #we measure and print position of the electron 
			Image: #we put an image inside the button 
				source: "graphs/measure.png"
				center_x:self.parent.center_x
				center_y:self.parent.center_y #we put the image in the middle of the button
				size: self.parent.width, self.parent.height

		Button: #MENU BUTTON  
        	size_hint_x: 0.075
        	size_hint_y: 0.08
        	pos_hint:{"right":1,"y":0.0}
        	font_size:14
        	text: "MENU"
			color:0.3,0.6,0.7,1 #tots els buttons seran aixi
            halign:"center"
			valign:"middle" #lletra centrada
            on_release: 
				app.root.current="menu" #quan el deixem anar canviem de pantalla 
				root.manager.transition.direction="right" #editem la transicio

		
<GameWindow>
	FloatLayout: #creem una layout
		Label: #afegim text per saber on som 
			font_size:25
			text: "GAME" 
			multiline: True
			pos_hint: {"center_x":0.5,"center_y":0.5} #diccionari:{"x","y","top","bottom","left","right"}
			size_hint_x: 0.6
			size_hint_y: 0.1 
			halign:"center"
			valign:"middle" #lletra centrada
		Button: #afegim un botó per tornar al menu 
        	font_size:14
			color:0.3,0.6,0.7,1 #tots els buttons seran aixi
			text: "Menu"
			pos_hint: {"right":1,"y":0} #diccionari:{"x","y","top","bottom","left","right"}
			size_hint_x: 0.08
			size_hint_y: 0.08
            halign:"center"
			valign:"middle" #lletra centrada
            on_release: 
				app.root.current="menu" #quan el deixem anar canviem de pantalla 
				root.manager.transition.direction="right" #editem la transicio