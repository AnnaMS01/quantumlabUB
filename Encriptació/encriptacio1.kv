<Bob>:
    name: "bobscreen"
    
    bit1:bit1
    bit2:bit2
    bits: bits
    nmesura: nmesura
    start1: start1 
    
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            id: nmesura
            text: root.nmesura_text
            size_hint:1,0.08
            
        
        
    
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,0.92
            
            
        
            BoxLayout: 
                orientation: 'horizontal'
                size_hint: 1, 0.2
                spacing: 100
                padding: 5
                #pos_hint: {'center_x':1}
                #anchor_x: 'center'
                
                
                Button: 
                    text: 'Home'           
                    
                    size_hint: 0.3, 0.5
                    #pos_hint: {"top":1}
                    background_color: 0,0.9,0.5,1
                    
                    on_press:
                        app.root.current = "home"
                        root.manager.transition.direction = "right"
                    
                Button:
                    id: start1
                    
                    text: 'Start'
                    
                    size_hint_x: 0.3
                    size_hint_y: 0.5
                    #pos_hint: {'bottom': 1, 'center_y':1}
                    background_color: (1,0.5,0,1)
                    
                    on_press: 
                        root.start()
                    
                Button:
                    text: 'Pause'
                    #background_normal: 'pause1.jpg'
                    #background_down: 'pause1.jpg'
                    size_hint: 0.4, 0.5
                    
                    on_press:
                        root.pause()
                        
                Button:
                    text:'Acabar i compartir'
                    size_hint: 0.4, 0.5 
                    on_press: 
                        root.acabaricompartir()
                        root.change_text()
                        
                Button:
                    text: 'Compartir dades'
                    size_hint: 0.4, 0.5 
                    
                    on_press:
                        root.change_text()
                        root.pause()
                   
                   
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.2,1
                
                Label:
                    text: 'Resultats'
                Label:
                    text:'Direccions'
                Label:
                    id: bit1
                    text: ''
                Label:
                    text:'Bits'
                Label:
                    id:bit2
                    text:''
                Label:
                    id:bits
                    text: 'Bits totals:  '
            
            
