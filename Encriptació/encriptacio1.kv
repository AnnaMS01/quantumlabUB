<WindowManager>:
    HomeScreen:
    Screen1:
    Screen2:
    Screen3:
    
<Button>:
    #font_size: 30
    color: 0.1,0.1,0.1,1 #num de 0 a 1
    #size_hint: 0.6,0.5 
    #size_hint: (0.8, 0.08)
    
    
<HomeScreen>:
    name: "home"
    
    BoxLayout:
        orientation: "vertical"
        spacing:20
        padding:150
            
        Label: 
            text: "HOME"
            font_size: 50
            color: 0,0.9,0.5,1
          
        Button:
        
            text: 'Clau senzilla'
            font_size: 20
            anchor_x: 'center'
            #height: 0.4
            #size_hint: 0.5,0.3
            size: self.texture_size
            #pos_hint: {"top":1}
            
            on_release: 
                app.root.current = "screen1"
                root.manager.transition.direction = "left"
                
        Button: 
            text:'Clau llarga'
            font_size: 20
            
            on_release:
                app.root.current = "screen2"
                root.manager.transition.direction = "left"
        Button:
            text: "Enviament"
            font_size: 20
            on_release:
                app.root.current = "screen3"
                root.manager.transition.direction = "left"
            
        
    #Label:
        #pos_hint
        #text:"Home"
   # Button: 
    #    text:"Start"
        
<Screen1>:
    name: "screen1"
    
    mxifrar: mxifrar
    clau: clau
    mxifrat: mxifrat
    mxifrat2: mxifrat2
    clau2: clau2
    mdxifrat: mdxifrat
    

        
    GridLayout:
        cols:2
            
        BoxLayout:
            orientation: "vertical"
            spacing:50
            padding:50
            
            GridLayout:
                cols:2
                
                Label:
                    text: "Missatge per xifrar:"
                
                TextInput:
                    id: mxifrar
                    multiline: False
                Label:
                    text: "Clau:"
                    
                TextInput:
                    id: clau
                    multiline: False
                
            Button:
                #anchor_x: 'center'
                #size_hint: 0.5,0.3
                text: "Codificar"
                on_press: root.btn()
                    
            Label:
                id: mxifrat
                text: "Missatge xifrat:  "
        
   
        #------------------------------------- 
        BoxLayout:
            orientation: "vertical"
            spacing:50
            padding:50

            GridLayout:
                cols:2
                
                Label:
                    text: "Missatge per desxifrar:"
                
                Label: 
                    id: mxifrat2
                    #multiline: False
                Label:
                    text: "Clau:"
                
                TextInput:
                    id: clau2
                    multiline: False
            
            Button:
                text: "Descodificar"
                on_press: root.btn1()
                
            Label:
                id: mdxifrat
                text: "Missatge desxifrat:  "
                
                #-------------------
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 0.2, .05
            Button:
                background_color: 0,0.9,0.5,1
                text: 'Home'
                on_press:
                    app.root.current = "home"
                    root.manager.transition.direction = "right"
           
               
