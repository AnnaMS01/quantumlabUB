                text: root.array0_text
            Label:
                id: array1
                text: root.array1_text2    
                
        #GridLayout:
            #cols:1
        Button:            
            text: "Compara"
            size_hint: 0.2, 0.3
            pos_hint: {"x":0.4, "y":0.7}
