<HomeScreen>:
    name: "home"
    
    BoxLayout:
        orientation: "vertical"
        spacing:20
        padding:150
            
        Label: 
            text: "HOME"
            font_size: 50
            color: 0,0.9,0.5,1
          
        Button:
        
            text: 'Clau senzilla'
            font_size: 20
            anchor_x: 'center'
            #height: 0.4
            #size_hint: 0.5,0.3
            size: self.texture_size
            #pos_hint: {"top":1}
            
            on_release: 
                app.root.current = "screen1"
                root.manager.transition.direction = "left"
                
        Button: 
            text:'Clau llarga'
            font_size: 20
            
            on_release:
                app.root.current = "screen2"
                root.manager.transition.direction = "left"
        Button:
            text: "Enviament"
            font_size: 20
            on_release:
                app.root.current = "screen3"
                root.manager.transition.direction = "left"
        
        Button:
            text: "Bob"
            font_size: 20
            on_release:
                app.root.current = "bobscreen"
                root.manager.transition.direction = "left"
                
        
    #Label:
