<Bob>:
    name: "bobscreen"
    
    bit1:bit1
    bit2:bit2
    bits: bits
    
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            text: "Has de mesurar més de 10 partícules per obtenir el missatge!"
            size_hint:1,0.08
        
        
    
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,0.92
            
            
        
            BoxLayout: 
                orientation: 'horizontal'
                size_hint: 1, 0.1
                spacing: 100
                padding: 5
                #pos_hint: {'center_x':1}
                #anchor_x: 'center'
                
                
                Button: 
                    text: 'Home'           
                    
                    size_hint: 0.2, 0.5
                    #pos_hint: {"top":1}
                    background_color: 0,0.9,0.5,1
                    
                    on_press:
                        app.root.current = "home"
                        root.manager.transition.direction = "right"
                    
                Button:
                    id: play
                    
                    text: 'Play'
                    
                    size_hint_x: 0.2
                    size_hint_y: 0.5
                    #pos_hint: {'bottom': 1, 'center_y':1}
                    background_color: (1,0.5,0,1)
                    
                    on_press: 
                        root.play()
                    
                Button:
                    text: 'Pause'
                    size_hint: 0.2, 0.5
                    
                    on_press:
                        root.pause()
                        
                Button:
                    text: 'Compartir dades'
                    size_hint: 0.4, 0.5 
                    
                    on_press:
                        root.change_text()
                        #app.root.current = "Publidir"
                        #root.manager.transition.direction = "left"
                   
                   
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.2,1
                
                Label:
                    text: 'Resultats'
                Label:
                    text:'Direccions'
                Label:
                    id: bit1
                    text: ''
                Label:
                    text:'Bits'
                Label:
                    id:bit2
                    text:''
                Label:
                    id:bits
                    text: 'Bits totals:  '
            
            
