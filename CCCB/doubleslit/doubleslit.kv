#:kivy 1.0.9
#: import main doubleslit
#:import Factory kivy.factory.Factory
<DoubleSlitScreen>:
    p_rectangle: p_rect
    speed_slider: s_slider.__self__
    button_1slit: button_1slit
    button_2slits: button_2slits

    button_large: button_large
    button_medium: button_medium
    button_small: button_small

    label_speed: label_speed

    orientation: "horizontal"
    padding: 20
    spacing: 20

    BoxLayout:
        size_hint: (0.25, 1)
        orientation: "vertical"
        spacing: 10
        padding: [10, 10, 10, 10]


        Widget:
            size_hint: (1, 0.1)
        # Label:
        #     align: "left"
        #     text: "[b]The double-slit experiment[/b]\nIn this experiment, a particle is thrown at a wall with holes, see what happens if you change the number and size of the holes."
        #     markup: True
        #     text_size: self.size
        #     valig: "center"

        BoxLayout:
            size_hint: (1, 0.2)
            orientation: "horizontal"
            ToggleButton:
                id: button_1slit
                name: "1"
                group: "number"
                text: root.strings['slit'][root.language]
                on_state: root.button_toggled(*args)
            ToggleButton:
                id: button_2slits
                name: "2"
                group: "number"
                text: root.strings['slits'][root.language]
                on_state: root.button_toggled(*args)

        BoxLayout:
            size_hint: (1, 0.2)
            orientation: "vertical"
            ToggleButton:
                size_hint_y: 0.5
                id: button_large
                name: "large"
                group: "size"
                text: root.strings['large'][root.language]
                on_state: root.button_toggled(*args)
            ToggleButton:
                size_hint_y: 0.5
                id: button_medium
                name: "medium"
                group: "size"
                text: root.strings['medium'][root.language]
                on_state: root.button_toggled(*args)
            ToggleButton:
                size_hint_y: 0.5
                id: button_small
                name: "small"
                group: "size"
                text: root.strings['small'][root.language]
                on_state: root.button_toggled(*args)


        BoxLayout:
            size_hint: (1, 0.1)
            orientation: "horizontal"
            Label:
                id: label_speed
                text: root.strings['speed'][root.language]
            Slider:
                id: s_slider
                min: 1
                max: 20
                value: 5
                step: 1

        BoxLayout:
            size_hint: (1, 0.2)
            orientation: "horizontal"
            FlagButton:
                source: "catalan.png"
                on_press: root.set_language(0)
            FlagButton:
                source: "spanish.png"
                on_press: root.set_language(1)
            FlagButton:
                source: "english.png"
                on_press: root.set_language(2)

    Widget:
        size_hint: (0.75, 1)
        id: p_rect
