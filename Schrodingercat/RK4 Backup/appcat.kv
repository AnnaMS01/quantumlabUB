#:import Factory kivy.factory.Factory
<Normpopup>:
    auto_dismiss: True
    size_hint_y: 0.9
    size_hint_x: 0.9
    title: "Norm conservation"
    on_dismiss: root.close()

    BoxLayout:
        id: Panel3_id

<Energypopup>:
    auto_dismiss: True
    size_hint_y: 0.9
    size_hint_x: 0.9
    title: "Energy conservation"
    on_dismiss: root.close()

    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint_y: 0.1
            Label:
                text: "Surface plot: "
            Switch:
                id: switch

        BoxLayout:
            id: Panel4_id


<appcat>:
    panel1: Panel1_id
    panel2: Panel2_id

    startstopbut_qua: start_stop_qua_id
    startstopbut_cla: start_stop_cla_id

    heightslide_qua: height_qua_slide
    heightslide_cla: height_cla_slide

    kslide_qua: k_qua_slide
    kslide_cla: k_cla_slide

    timeslide_qua: time_qua_slide
    timeslide_cla: time_cla_slide

    sigmaslide_qua: sigma_qua_slide
    radiusslide_cla: radius_cla_slide

    poslide_qua: pos_qua_slide
    poslide_cla: pos_cla_slide

    velslide_qua: vel_qua_slide
    velslide_cla: vel_cla_slide

    vel_btn_qua: vel_qua_but
    vel_btn_cla: vel_cla_but


    TabbedPanel:
        size_hint: 1, 1
        do_default_tab: False

        TabbedPanelItem:
            text: "[b]Classical[/b]"
            markup: True

            BoxLayout:
                orientation: "vertical"

                BoxLayout:
                    size_hint_y: 0.80
                    orientation: "horizontal"

                    BoxLayout:
                        id: Panel1_id
                        size_hint_x: 0.85

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_x: 0.15

                        Label:
                            text: "[b]Ground[/b]"
                            markup: True
                            font_size: wall_cla_label.font_size + 1
                            size_hint_y: 0.1
                            halign: 'center'
                            valign: 'middle'

                        BoxLayout:
                            orientation: "horizontal"

                            BoxLayout:
                                orientation: "vertical"

                                Label:
                                    id: wall_cla_label
                                    text: "[b]Wall[/b] \n h = " + str(height_cla_slide.value).ljust(3)[:3]
                                    size_hint_y: 0.1
                                    font_size: int(self.x*0.025)
                                    halign: 'center'
                                    valign: 'middle'
                                    markup: True

                                Slider:
                                    id: height_cla_slide
                                    orientation: "vertical"
                                    size_hint_y: 0.9
                                    cursor_width: self.x/20
                                    cursor_height: self.x/20
                                    min: 0.001
                                    max: 1
                                    on_touch_down: root.plotground()
                                    on_touch_move: root.plotground()
                                    on_touch_up: root.computevolution_cla()

                            BoxLayout:
                                orientation: "vertical"

                                Label:
                                    text: "[b]Well[/b] \n k = " + str(k_cla_slide.value).ljust(3)[:3]
                                    size_hint_y: 0.1
                                    font_size: wall_cla_label.font_size
                                    halign: 'center'
                                    valign: 'middle'
                                    markup: True

                                Slider:
                                    id: k_cla_slide
                                    orientation: "vertical"
                                    size_hint_y: 0.9
                                    cursor_size: height_cla_slide.cursor_size
                                    min: 0
                                    max: 1
                                    on_touch_down: root.plotground()
                                    on_touch_move: root.plotground()
                                    on_touch_up: root.computevolution_cla()

                BoxLayout:
                    orientation: "horizontal"
                    size_hint_y: 0.20

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_x: 0.85

                        BoxLayout:
                            size_hint_y: 1/3.5

                            Label:
                                text: "[b]  Time:[/b]   t = " + '%1.1f' % time_cla_slide.value + " s"
                                font_size: wall_cla_label.font_size
                                size_hint_x: 0.25
                                text_size: self.size
                                halign: 'left'
                                valign: 'middle'
                                markup: True

                            Label:
                                text: '%1.1f' % time_cla_slide.min
                                font_size: wall_cla_label.font_size
                                size_hint_x: 0.065
                                halign: 'center'
                                valign: 'middle'

                            Slider:
                                id: time_cla_slide
                                size_hint_x: 0.70
                                cursor_width: self.y/4
                                cursor_height: self.y/4
                                cursor_image: "cursor.png"
                                min: 0
                                max: root.tmax_cla
                                value_track: True
                                value_track_color: [1, 0, 0, 1]
                                on_touch_down: root.plotball(self.value)
                                on_touch_move: root.plotball(self.value)

                            Label:
                                text: '%1.1f' % time_cla_slide.max
                                font_size: wall_cla_label.font_size
                                size_hint_x: 0.075
                                halign: 'center'
                                valign: 'middle'

                        BoxLayout:
                            size_hint_y: 2/3.
                            orientation: "horizontal"

                            BoxLayout:
                                orientation: "vertical"
                                size_hint_x: 0.7

                                BoxLayout:
                                    orientation: "horizontal"
                                    size_hint_y: 1/3.

                                    Label:
                                        text: "[b]       Radius:[/b]   r = " + '%1.1f' % radius_cla_slide.value + " m"
                                        font_size: wall_cla_label.font_size - 1
                                        size_hint_x: 0.4
                                        text_size: self.size
                                        halign: 'left'
                                        valign: 'top'
                                        markup: True


                                    Slider:
                                        id: radius_cla_slide
                                        size_hint_x: 0.6
                                        cursor_size: self.y/2, self.y/2
                                        min: 0.1
                                        max: 0.4
                                        on_touch_down: root.change_radius()
                                        on_touch_move: root.change_radius()

                                BoxLayout:
                                    orientation: "horizontal"
                                    size_hint_y: 1/3.

                                    Label:
                                        text: "[b]       Position:[/b]   x = " + '%1.1f' % pos_cla_slide.value + " m"
                                        font_size: wall_cla_label.font_size - 1
                                        size_hint_x: 0.4
                                        text_size: self.size
                                        halign: 'left'
                                        valign: 'top'
                                        markup: True

                                    Slider:
                                        id: pos_cla_slide
                                        size_hint_x: 0.6
                                        cursor_size: radius_cla_slide.cursor_size
                                        min: -2.5
                                        max: 2.5
                                        on_touch_down: root.change_xo_cla()
                                        on_touch_move: root.change_xo_cla()

                                BoxLayout:
                                    orientation: "horizontal"
                                    size_hint_y: 1/3.

                                    Label:
                                        text: "[b]       Velocity:[/b]   v = " + '%1.1f' % vel_cla_slide.value + " m/s"
                                        font_size: wall_cla_label.font_size - 1
                                        size_hint_x: 0.4
                                        text_size: self.size
                                        halign: 'left'
                                        valign: 'top'
                                        markup: True


                                    Slider:
                                        id: vel_cla_slide
                                        size_hint_x: 0.6
                                        cursor_size: radius_cla_slide.cursor_size
                                        min: -3
                                        max: 3
                                        on_touch_down: root.change_vel_cla()
                                        on_touch_move: root.change_vel_cla()


                            Button:
                                id: vel_cla_but
                                size_hint_x: 0.1
                                font_size: wall_cla_label.font_size + 1
                                background_normal: "grey.png"
                                background_down: "blue.png"
                                on_press: root.velocity_cla_btn()


                            Button:
                                id: start_stop_cla_id
                                size_hint_x: 0.1
                                on_press: root.start_stop_cla()

                            Button:
                                size_hint_x: 0.1
                                background_normal: "reset.png"
                                background_down: "resetblue.png"
                                on_press: root.reset_cla_btn()


                    Button:
                        size_hint_x: 0.15
                        text: 'Energy'
                        text_color: [1,1,1,1]
                        font_size: wall_cla_label.font_size + 1
                        background_normal: "lightning.png"
                        on_release: Factory.Energypopup(root).open()



        TabbedPanelItem:
            text: "[b]Quantum[/b]"
            markup: True

            BoxLayout:
                orientation: "vertical"

                BoxLayout:
                    size_hint_y: 0.80
                    orientation: "horizontal"

                    BoxLayout:
                        id: Panel2_id
                        size_hint_x: 0.85

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_x: 0.15

                        Label:
                            text: "[b]Potential[/b]"
                            markup: True
                            font_size: wall_label.font_size + 1
                            size_hint_y: 0.1
                            halign: 'center'
                            valign: 'middle'

                        BoxLayout:
                            orientation: "horizontal"

                            BoxLayout:
                                orientation: "vertical"

                                Label:
                                    id: wall_label
                                    text: "[b]Wall[/b] \n h = " + str(height_qua_slide.value).ljust(3)[:3]
                                    size_hint_y: 0.1
                                    font_size: int(self.x*0.025)
                                    halign: 'center'
                                    valign: 'middle'
                                    markup: True

                                Slider:
                                    id: height_qua_slide
                                    orientation: "vertical"
                                    size_hint_y: 0.9
                                    cursor_width: self.x/20
                                    cursor_height: self.x/20
                                    min: 0.001
                                    max: 2
                                    on_touch_move: root.plotpot()
                                    on_touch_down: root.plotpot()
                                    on_touch_up: root.computevolution()

                            BoxLayout:
                                orientation: "vertical"

                                Label:
                                    text: "[b]Well[/b] \n k = " + str(k_qua_slide.value).ljust(3)[:3]
                                    size_hint_y: 0.1
                                    font_size: wall_label.font_size
                                    halign: 'center'
                                    valign: 'middle'
                                    markup: True

                                Slider:
                                    id: k_qua_slide
                                    orientation: "vertical"
                                    size_hint_y: 0.9
                                    cursor_size: height_qua_slide.cursor_size
                                    min: 0.001
                                    max: 2
                                    on_touch_move: root.plotpot()
                                    on_touch_down: root.plotpot()
                                    on_touch_up: root.computevolution()

                BoxLayout:
                    orientation: "horizontal"
                    size_hint_y: 0.20

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_x: 0.85

                        BoxLayout:
                            size_hint_y: 1/3.5

                            Label:
                                text: "[b]  Time:[/b]   t = " + '%1.1f' % time_qua_slide.value + " " + u"\u0127" + "/J"
                                font_size: wall_label.font_size
                                size_hint_x: 0.25
                                text_size: self.size
                                halign: 'left'
                                valign: 'middle'
                                markup: True

                            Label:
                                text: '%1.1f' % time_qua_slide.min
                                font_size: wall_label.font_size
                                size_hint_x: 0.065
                                halign: 'center'
                                valign: 'middle'

                            Slider:
                                id: time_qua_slide
                                size_hint_x: 0.70
                                cursor_width: self.y/4
                                cursor_height: self.y/4
                                cursor_image: "cursor.png"
                                min: 0
                                max: root.tmax_qua
                                value_track: True
                                value_track_color: [1, 0, 0, 1]
                                on_touch_move: root.plotpsi(self.value)
                                on_touch_down: root.plotpsi(self.value)

                            Label:
                                text: '%1.1f' % time_qua_slide.max
                                font_size: wall_label.font_size
                                size_hint_x: 0.075
                                halign: 'center'
                                valign: 'middle'

                        BoxLayout:
                            size_hint_y: 2/3.
                            orientation: "horizontal"

                            BoxLayout:
                                orientation: "vertical"
                                size_hint_x: 0.7

                                BoxLayout:
                                    orientation: "horizontal"
                                    size_hint_y: 1/3.

                                    Label:
                                        text: "[b]       Thickness:[/b]   " + u"\u03C3" + " = " + '%1.1f' % sigma_qua_slide.value
                                        font_size: wall_label.font_size - 1
                                        size_hint_x: 0.4
                                        text_size: self.size
                                        halign: 'left'
                                        valign: 'top'
                                        markup: True


                                    Slider:
                                        id: sigma_qua_slide
                                        size_hint_x: 0.6
                                        cursor_size: self.y/2, self.y/2
                                        min: 0.2
                                        max: 3
                                        on_touch_move: root.change_sigma()
                                        on_touch_down: root.change_sigma()
                                        on_touch_up: root.computevolution()

                                BoxLayout:
                                    orientation: "horizontal"
                                    size_hint_y: 1/3.

                                    Label:
                                        text: "[b]       Position:[/b]   " + u"\u03BC" + " = " + '%1.1f' % pos_qua_slide.value + " m"
                                        font_size: wall_label.font_size - 1
                                        size_hint_x: 0.4
                                        text_size: self.size
                                        halign: 'left'
                                        valign: 'top'
                                        markup: True

                                    Slider:
                                        id: pos_qua_slide
                                        size_hint_x: 0.6
                                        cursor_size: sigma_qua_slide.cursor_size
                                        min: -3
                                        max: 3
                                        on_touch_move: root.change_xo(self.value)
                                        on_touch_down: root.change_xo(self.value)

                                BoxLayout:
                                    orientation: "horizontal"
                                    size_hint_y: 1/3.

                                    Label:
                                        text: "[b]       Velocity:[/b]   v = " + '%1.1f' % vel_qua_slide.value + " m/s"
                                        font_size: wall_label.font_size - 1
                                        size_hint_x: 0.4
                                        text_size: self.size
                                        halign: 'left'
                                        valign: 'top'
                                        markup: True

                                    Slider:
                                        id: vel_qua_slide
                                        size_hint_x: 0.6
                                        cursor_size: sigma_qua_slide.cursor_size
                                        min: -3
                                        max: 3
                                        on_touch_move: root.change_vel_qua()
                                        on_touch_down: root.change_vel_qua()


                            Button:
                                id: vel_qua_but
                                size_hint_x: 0.1
                                font_size: wall_label.font_size + 1
                                background_normal: "grey.png"
                                background_down: "blue.png"
                                on_press: root.velocity_btn()

                            BoxLayout:
                                size_hint_x: 0.1

                                Button:
                                    size: 5,5
                                    id: start_stop_qua_id
                                    on_press: root.start_stop()

                            Button:
                                size_hint_x: 0.1
                                background_normal: "reset.png"
                                background_down: "resetblue.png"
                                on_press: root.reset_btn()



                    Button:
                        size_hint_x: 0.15
                        text: 'Norm'
                        text_color: [1,1,1,1]
                        font_size: wall_label.font_size + 1
                        on_release: Factory.Normpopup(root).open()
                        background_normal: "normgaussian.png"
