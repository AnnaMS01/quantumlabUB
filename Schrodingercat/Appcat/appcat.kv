#:import Factory kivy.factory.Factory
<Normpopup>:
    auto_dismiss: True
    size_hint_y: 0.9
    size_hint_x: 0.9
    title: "Norm conservation"
    on_dismiss: root.close()

    BoxLayout:
        id: Panel3_id

<Energypopup>:
    auto_dismiss: True
    size_hint_y: 0.9
    size_hint_x: 0.9
    title: "Energy conservation"

    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint_y: 0.1
            Label:
                size_hint_x: 0.7
                text: "Surface plot: "
            Button:
                id: switch
                size_hint_x: 0.1
                on_press: root.changeplot()
            Label:
                size_hint_x: 0.2

        BoxLayout:
            id: Panel4_id


<appcat>:
    panel1: Panel1_id
    panel2: Panel2_id

    startstopbut_qua: start_stop_qua_id
    startstopbut_cla: start_stop_cla_id

    heightslide_qua: height_qua_slide
    heightslide_cla: height_cla_slide

    kslide_qua: k_qua_slide
    kslide_cla: k_cla_slide

    timeslide_qua: time_qua_slide
    timeslide_cla: time_cla_slide

    sigmaslide_qua: sigma_qua_slide
    radiusslide_cla: radius_cla_slide

    poslide_qua: pos_qua_slide
    poslide_cla: pos_cla_slide

    momslide_qua: mom_qua_slide
    velslide_cla: vel_cla_slide

    vel_btn_qua: vel_qua_but
    vel_btn_cla: vel_cla_but

    progressbar_cla: pbar_cla
    progressbar_qua: pbar_qua

    rk_button: rkbutt
    rkf_button: rkfbutt

    elec_button: electronbutt
    atom_button: atombutt

    energy_button: energy_but
    norm_button: norm_but

    compu_button_cla: compu_cla_but
    compu_button_qua: compu_qua_but

    reset_cla_button: reset_cla_but
    reset_qua_button: reset_qua_but


    TabbedPanel:
        size_hint: 1, 1
        do_default_tab: False

        TabbedPanelItem:
            text: "[b]Classical[/b]"
            markup: True

            BoxLayout:
                orientation: "vertical"

                BoxLayout:
                    size_hint_y: 0.75
                    orientation: "horizontal"

                    BoxLayout:
                        id: Panel1_id
                        size_hint_x: 0.85

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_x: 0.15

                        Label:
                            text: "[b]Ground[/b]"
                            markup: True
                            font_size: wall_cla_label.font_size + 1
                            size_hint_y: 0.1
                            halign: 'center'
                            valign: 'middle'

                        BoxLayout:
                            orientation: "horizontal"

                            BoxLayout:
                                orientation: "vertical"

                                Label:
                                    id: wall_cla_label
                                    text: "[b]Wall[/b] \n h = " + str(height_cla_slide.value).ljust(3)[:3]
                                    size_hint_y: 0.1
                                    font_size: self.height*0.45
                                    halign: 'center'
                                    valign: 'middle'
                                    markup: True

                                Slider:
                                    id: height_cla_slide
                                    orientation: "vertical"
                                    size_hint_y: 0.9
                                    cursor_width: self.height*0.1
                                    cursor_height: self.height*0.1
                                    min: 0.001
                                    max: 1
                                    on_touch_move: root.plotground()
                                    on_touch_up: root.plotground()

                            BoxLayout:
                                orientation: "vertical"

                                Label:
                                    text: "[b]Well[/b] \n k = " + str(k_cla_slide.value).ljust(3)[:3]
                                    size_hint_y: 0.1
                                    font_size: wall_cla_label.font_size
                                    halign: 'center'
                                    valign: 'middle'
                                    markup: True

                                Slider:
                                    id: k_cla_slide
                                    orientation: "vertical"
                                    size_hint_y: 0.9
                                    cursor_size: height_cla_slide.cursor_size
                                    min: 0
                                    max: 1
                                    on_touch_move: root.plotground()
                                    on_touch_up: root.plotground()

                BoxLayout:
                    orientation: "horizontal"
                    size_hint_y: 0.25

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_x: 0.85

                        BoxLayout:
                            size_hint_y: 0.2

                            Label:
                                id: time_label_cla
                                text: "[b]  Time:[/b]   t = " + '%1.1f' % time_cla_slide.value + " s"
                                font_size: self.height*0.65
                                size_hint_x: 0.25
                                text_size: self.size
                                halign: 'left'
                                valign: 'middle'
                                markup: True

                            Label:
                                text: '%1.1f' % time_cla_slide.min
                                font_size: time_label_cla.font_size
                                size_hint_x: 0.065
                                halign: 'center'
                                valign: 'middle'

                            Slider:
                                id: time_cla_slide
                                size_hint_x: 0.70
                                cursor_width: self.y/5
                                cursor_height: self.y/5
                                cursor_image: "cursor.png"
                                cursor_disabled_image: "cursor.png"
                                min: 0
                                max: root.tmax_cla
                                value_track: True
                                value_track_color: [1, 0, 0, 1]
                                on_touch_up: root.plotball(self.value)
                                on_touch_move: root.plotball(self.value)

                            Label:
                                text: '%1.1f' % time_cla_slide.max
                                font_size: time_label_cla.font_size
                                size_hint_x: 0.075
                                halign: 'center'
                                valign: 'middle'

                        BoxLayout:
                            size_hint_y: 0.8
                            orientation: "horizontal"

                            Button:
                                id: compu_cla_but
                                size_hint_x: 0.15
                                text: "Compute"
                                font_size: wall_cla_label.font_size + 1
                                background_normal: "cogwheelactive.png"
                                background_disabled_normal: "cogwheel.png"
                                on_press: root.triggercompute_cla()

                            BoxLayout:
                                size_hint_x: 0.85
                                orientation: "vertical"

                                ProgressBar:
                                    id: pbar_cla
                                    size_hint_y: 0.2
                                    max: 100

                                BoxLayout:
                                    size_hint_y: 0.8
                                    orientation: "horizontal"

                                    TabbedPanel:
                                        tab_height: self.height*0.2
                                        size_hint: 0.64, 1
                                        do_default_tab: False

                                        TabbedPanelItem:
                                            text: "Init. Cond."

                                            BoxLayout:
                                                orientation: "vertical"

                                                BoxLayout:
                                                    orientation: "horizontal"
                                                    size_hint_y: 1/2.

                                                    Label:
                                                        text: "[b]  Position:[/b]   x = " + '%1.1f' % pos_cla_slide.value + " m"
                                                        font_size: time_label_cla.font_size - 1
                                                        size_hint_x: 0.5
                                                        text_size: self.size
                                                        halign: 'left'
                                                        valign: 'center'
                                                        markup: True

                                                    Slider:
                                                        id: pos_cla_slide
                                                        size_hint_x: 0.5
                                                        cursor_size: self.height*0.9, self.height*0.9
                                                        min: -2.5
                                                        max: 2.5
                                                        on_touch_up: root.change_xo_cla()
                                                        on_touch_move: root.change_xo_cla()

                                                BoxLayout:
                                                    orientation: "horizontal"
                                                    size_hint_y: 1/2.

                                                    Label:
                                                        text: "[b]  Velocity:[/b]   v = " + '%1.1f' % vel_cla_slide.value + " m/s"
                                                        font_size: time_label_cla.font_size - 1
                                                        size_hint_x: 0.5
                                                        text_size: self.size
                                                        halign: 'left'
                                                        valign: 'center'
                                                        markup: True


                                                    Slider:
                                                        id: vel_cla_slide
                                                        size_hint_x: 0.5
                                                        cursor_size: pos_cla_slide.cursor_size
                                                        min: -2
                                                        max: 2
                                                        on_touch_up: root.change_vel_cla()
                                                        on_touch_move: root.change_vel_cla()


                                        TabbedPanelItem:
                                            text: "Ball"

                                            BoxLayout:
                                                orientation: "horizontal"
                                                size_hint_y: 1/2.

                                                Label:
                                                    text: "[b]  Radius:[/b]   r = " + '%1.1f' % radius_cla_slide.value + " m"
                                                    font_size: time_label_cla.font_size - 1
                                                    size_hint_x: 0.5
                                                    text_size: self.size
                                                    halign: 'left'
                                                    valign: 'center'
                                                    markup: True


                                                Slider:
                                                    id: radius_cla_slide
                                                    size_hint_x: 0.5
                                                    cursor_size: pos_cla_slide.cursor_size
                                                    min: 0.1
                                                    max: 0.25
                                                    on_touch_up: root.change_radius()
                                                    on_touch_move: root.change_radius()


                                        TabbedPanelItem:
                                            text: "Method"

                                            BoxLayout:
                                                orientation: "horizontal"

                                                Button:
                                                    id: rkbutt
                                                    text: "Runge-Kutta 4"
                                                    font_size: time_label_cla.font_size - 1
                                                    size_hint_x: 0.7
                                                    text_size: self.size
                                                    halign: 'center'
                                                    valign: 'center'
                                                    on_press: root.change_RK()


                                                Button:
                                                    id: rkfbutt
                                                    text: "Runge-Kutta-Fehlberg 45"
                                                    font_size: time_label_cla.font_size - 1
                                                    size_hint_x: 0.7
                                                    text_size: self.size
                                                    halign: 'center'
                                                    valign: 'center'
                                                    on_press: root.change_RKF()


                                    Button:
                                        id: vel_cla_but
                                        size_hint_x: 0.12
                                        font_size: wall_cla_label.font_size + 2
                                        background_normal: "grey.png"
                                        background_down: "blue.png"
                                        background_disabled_normal: "greydisabled.png"
                                        on_press: root.velocity_cla_btn()

                                    Button:
                                        id: start_stop_cla_id
                                        size_hint_x: 0.12
                                        background_disabled_normal: "playdisabled.png"
                                        on_press: root.start_stop_cla()

                                    Button:
                                        id: reset_cla_but
                                        size_hint_x: 0.12
                                        background_normal: "reset.png"
                                        background_down: "resetblue.png"
                                        background_disabled_normal: "resetdisabled.png"
                                        on_press: root.reset_cla_btn()


                    Button:
                        id: energy_but
                        size_hint_x: 0.15
                        text: 'Energy'
                        text_color: [1,1,1,1]
                        font_size: wall_cla_label.font_size + 1
                        background_normal: "lightning.png"
                        background_disabled_normal: "lightninggrey.png"
                        on_release: Factory.Energypopup(root).open()



        TabbedPanelItem:
            text: "[b]Quantum[/b]"
            markup: True

            BoxLayout:
                orientation: "vertical"

                BoxLayout:
                    size_hint_y: 0.75
                    orientation: "horizontal"

                    BoxLayout:
                        id: Panel2_id
                        size_hint_x: 0.85

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_x: 0.15

                        Label:
                            text: "[b]Potential[/b]"
                            markup: True
                            font_size: wall_label.font_size + 1
                            size_hint_y: 0.1
                            halign: 'center'
                            valign: 'middle'

                        BoxLayout:
                            orientation: "horizontal"

                            BoxLayout:
                                orientation: "vertical"

                                Label:
                                    id: wall_label
                                    text: "[b]Wall[/b] \n h = " + str(height_qua_slide.value).ljust(3)[:3]
                                    size_hint_y: 0.1
                                    font_size: self.height*0.45
                                    halign: 'center'
                                    valign: 'middle'
                                    markup: True

                                Slider:
                                    id: height_qua_slide
                                    orientation: "vertical"
                                    size_hint_y: 0.9
                                    cursor_width: self.height*0.1
                                    cursor_height: self.height*0.1
                                    min: 0.001
                                    max: 2*root.pot_factor
                                    on_touch_move: root.plotpot()
                                    on_touch_up: root.plotpot()

                            BoxLayout:
                                orientation: "vertical"

                                Label:
                                    text: "[b]Well[/b] \n k = " + str(k_qua_slide.value).ljust(3)[:3]
                                    size_hint_y: 0.1
                                    font_size: wall_label.font_size
                                    halign: 'center'
                                    valign: 'middle'
                                    markup: True

                                Slider:
                                    id: k_qua_slide
                                    orientation: "vertical"
                                    size_hint_y: 0.9
                                    cursor_size: height_qua_slide.cursor_size
                                    min: 0
                                    max: 1
                                    on_touch_move: root.plotpot()
                                    on_touch_up: root.plotpot()

                BoxLayout:
                    orientation: "horizontal"
                    size_hint_y: 0.25

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_x: 0.85

                        BoxLayout:
                            size_hint_y: 0.2

                            Label:
                                id: time_label_qua
                                text: "[b]  Time:[/b]   t = " + '%1.1f'%time_qua_slide.value+" "+str(root.time_unit_qua)
                                font_size: self.height*0.65
                                size_hint_x: 0.25
                                text_size: self.size
                                halign: 'left'
                                valign: 'middle'
                                markup: True

                            Label:
                                text: '%1.1f' % time_qua_slide.min
                                font_size: time_label_qua.font_size
                                size_hint_x: 0.065
                                halign: 'center'
                                valign: 'middle'

                            Slider:
                                id: time_qua_slide
                                size_hint_x: 0.70
                                cursor_width: self.y/5
                                cursor_height: self.y/5
                                cursor_image: "cursor.png"
                                cursor_disabled_image: "cursor.png"
                                min: 0
                                max: root.tmax_qua
                                value_track: True
                                value_track_color: [1, 0, 0, 1]
                                on_touch_up: root.plotpsi(self.value)
                                on_touch_move: root.plotpsi(self.value)

                            Label:
                                text: '%1.1f' % time_qua_slide.max
                                font_size: time_label_qua.font_size
                                size_hint_x: 0.075
                                halign: 'center'
                                valign: 'middle'

                        BoxLayout:
                            size_hint_y: 0.8
                            orientation: "horizontal"

                            Button:
                                id: compu_qua_but
                                size_hint_x: 0.15
                                text: "Compute"
                                font_size: wall_label.font_size + 1
                                background_normal: "cogwheelactive.png"
                                background_disabled_normal: "cogwheel.png"
                                on_press: root.triggercompute_qua()

                            BoxLayout:
                                size_hint_x: 0.85
                                orientation: "vertical"

                                ProgressBar:
                                    id: pbar_qua
                                    size_hint_y: 0.2
                                    max: 100

                                BoxLayout:
                                    size_hint_y: 0.8
                                    orientation: "horizontal"

                                    TabbedPanel:
                                        tab_height: self.height*0.2
                                        size_hint: 0.64, 1
                                        do_default_tab: False

                                        TabbedPanelItem:
                                            text: "Init. Cond."

                                            BoxLayout:
                                                orientation: "vertical"

                                                BoxLayout:
                                                    orientation: "horizontal"
                                                    size_hint_y: 1/2.

                                                    Label:
                                                        text: "[b]  Position:[/b]   "+u"\u03BC"+ " = "+'%1.1f'%pos_qua_slide.value+" "+root.x_unit_bis_qua
                                                        font_size: time_label_qua.font_size - 1
                                                        size_hint_x: 0.5
                                                        text_size: self.size
                                                        halign: 'left'
                                                        valign: 'center'
                                                        markup: True

                                                    Slider:
                                                        id: pos_qua_slide
                                                        size_hint_x: 0.5
                                                        cursor_size: self.height*0.9, self.height*0.9
                                                        min: -3
                                                        max: 3
                                                        on_touch_move: root.change_xo(self.value)
                                                        on_touch_up: root.change_xo(self.value)

                                                BoxLayout:
                                                    orientation: "horizontal"
                                                    size_hint_y: 1/2.

                                                    Label:
                                                        text: "[b]  Mom.:[/b]   p = " + '%1.1f'%mom_qua_slide.value +" "+u"\u0127"+"/"+root.x_unit_bis_qua
                                                        font_size: time_label_qua.font_size - 1
                                                        size_hint_x: 0.5
                                                        text_size: self.size
                                                        halign: 'left'
                                                        valign: 'center'
                                                        markup: True

                                                    Slider:
                                                        id: mom_qua_slide
                                                        size_hint_x: 0.5
                                                        cursor_size: pos_qua_slide.cursor_size
                                                        min: -2
                                                        max: 2
                                                        on_touch_move: root.change_mom_qua()
                                                        on_touch_up: root.change_mom_qua()

                                        TabbedPanelItem:
                                            text: "Particle"

                                            BoxLayout:
                                                orientation: "vertical"

                                                BoxLayout:
                                                    orientation: "horizontal"
                                                    size_hint_y: 1/2.

                                                    Label:
                                                        text: "[b]  Thickness:[/b]   " + u"\u03C3" + " = " + '%1.1f' %sigma_qua_slide.value
                                                        font_size: time_label_qua.font_size - 1
                                                        size_hint_x: 0.5
                                                        text_size: self.size
                                                        halign: 'left'
                                                        valign: 'center'
                                                        markup: True


                                                    Slider:
                                                        id: sigma_qua_slide
                                                        size_hint_x: 0.5
                                                        cursor_size: pos_qua_slide.cursor_size
                                                        min: 0.2
                                                        max: 2.5
                                                        on_touch_move: root.change_sigma()
                                                        on_touch_up: root.change_sigma()

                                                BoxLayout:
                                                    orientation: "horizontal"
                                                    size_hint_y: 1/2.

                                                    Button:
                                                        id: electronbutt
                                                        text: "Electron"
                                                        font_size: time_label_qua.font_size - 1
                                                        text_size: self.size
                                                        halign: 'center'
                                                        valign: 'center'
                                                        on_press: root.change_elec()


                                                    Button:
                                                        id: atombutt
                                                        text: "Rb 87 atom"
                                                        font_size: time_label_qua.font_size - 1
                                                        text_size: self.size
                                                        halign: 'center'
                                                        valign: 'center'
                                                        on_press: root.change_atom()

                                    Button:
                                        id: vel_qua_but
                                        size_hint_x: 0.12
                                        font_size: wall_label.font_size + 2
                                        background_normal: "grey.png"
                                        background_down: "blue.png"
                                        background_disabled_normal: "greydisabled.png"
                                        on_press: root.velocity_btn()

                                    Button:
                                        id: start_stop_qua_id
                                        size_hint_x: 0.12
                                        background_disabled_normal: "playdisabled.png"
                                        on_press: root.start_stop()

                                    Button:
                                        id: reset_qua_but
                                        size_hint_x: 0.12
                                        background_normal: "reset.png"
                                        background_down: "resetblue.png"
                                        background_disabled_normal: "resetdisabled.png"
                                        on_press: root.reset_btn()


                    Button:
                        id: norm_but
                        size_hint_x: 0.15
                        text: 'Norm'
                        text_color: [1,1,1,1]
                        font_size: wall_label.font_size + 1
                        background_normal: "normgaussian.png"
                        on_release: Factory.Normpopup(root).open()
