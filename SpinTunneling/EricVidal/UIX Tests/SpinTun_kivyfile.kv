<Starting_Screen>:
    name: 'Starting'
    
    #Starting LAYOUT
    FloatLayout: 
		id: menu_layout
		
		#size: root.width, root.height #layout that occupies all image
		size_hint_x:1 
		size_hint_y:1
    	
    	#Sets bg color
    	canvas.before: 
			Color: 
				rgba: (1,1,1,1) 
			Rectangle: 
				size: self.size 
				pos: self.pos
				
        #App Logo
        GridLayout:
			cols: 1
			rows: 1 
			size_hint_x:1
			size_hint_y:1
			pos_hint:{"x":0,"y":0}
