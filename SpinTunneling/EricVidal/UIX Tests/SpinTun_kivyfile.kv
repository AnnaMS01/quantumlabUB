<Resonance_Screen>
    name:'Resonance'
    
    graphic_box1:graphic_box1
    
    #Resonance LAYOUT
    FloatLayout: 
		id: resonance_layout
		
		#size: root.width, root.height #layout that occupies all image
		size_hint_x:1 
		size_hint_y:1
    	
    	#Sets bg color
    	canvas.before: 
			Color: 
				rgba: (1,1,1,1) 
			Rectangle: 
				size: self.size 
				pos: self.pos
				
        #TOP SCREEN
        FloatLayout: 
			size_hint_x: 1 
			size_hint_y:0.2
			pos_hint:{"x":0,"y":0.8}
			
			#Information PopUp
            Button:
                id: popup_reso
                
                text: "i" if popup_reso.state == "normal" else "Sth Incoming"
                font_size:44
                font_name:'00803_AbrazoScriptSSiBold'
                bold: True
    			color: 255/255, 255/255, 255/255, 1
    			disabled: False 
    			background_color: 0, 0, 0, 1
    			
    			pos_hint: {"center_x":0.05,"center_y":0.6}
    			size_hint_x: 0.05
    			size_hint_y: 0.4
                halign:"center"
    			valign:"middle"
    			on_release:
        			root.popup_btn()

			#Title
            Label:  
    			id: front_title
			
    			text: "RESONANCE"
    			font_size:60
    			font_name:'07558_CenturyGothic' 
    			bold: True
    			color:0, 0, 0, 1
    			multiline: True
			
    			pos_hint: {"center_x":0.25,"center_y":0.6}
    			#diccionary to assign pos:{"x","y","top","bottom","left","right"}
			
    			size_hint_x: 0.6
    			size_hint_y:0.1 
    			halign:"center"
    			valign:"middle" #centered paragraph sentences
            
            #Text
            Label:  
    			id: explanation_text
    			
    			text: "Feel free to try whatever you want and analyse what is happening." 
    			font_size:20
    			font_name:'39335_UniversCondensed' 
    			bold: False
    			color:0, 0, 0, 1
    			multiline: True
			
    			pos_hint: {"center_x":0.6,"center_y":0.45}			
    			size_hint_x: 0.6
    			size_hint_y:0.1 
    			halign:"center"
    			valign:"middle" #centered paragraph sentences
            
            
            BoxLayout: #for languages
    			size_hint_x: 0.15
    			size_hint_y:0.3
    			pos_hint:{"right":0.98,"top":0.9}
    			orientation: "horizontal"
			
    			#add buttons for languages
			
    			#CATALAN
    			Button: 
    	            id: button_cat
    	            text: "CAT"
    	            font_name:'39335_UniversCondensed'
    	            color: 23/255, 190/255, 255/255, 1
    	        	font_size:18
    				bold: True
                	halign:"center"
    				valign:"middle" #lletra centrada
    				on_release: #root.catalan() 
				
                #ESP
    			Button:  
    	            id: button_esp
    	            text: "CAST"
    	            font_name:'39335_UniversCondensed'
    	            color: 23/255, 190/255, 255/255, 1
    	        	font_size:18
    				bold: True
                	halign:"center"
    				valign:"middle" #lletra centrada
    				on_release: #root.esp()
				
    			#ENGLISH	  
    			Button:  
    	            id: button_eng
    	            text: "ENG"
    	            font_name:'39335_UniversCondensed'
    	            color: 23/255, 190/255, 255/255, 1
    	        	font_size:18
                    background_color: (0,0,1,0.8)
    				bold: True
                	halign:"center"
    				valign:"middle" #lletra centrada
    				on_release: #root.english()
    				
    				
    				
        #MIDDLE SCREEN
        FloatLayout: 
			size_hint_x: 0.8 
			size_hint_y:0.12
			pos_hint:{"x":0.1,"y":0.7}
			
			#Sets bg color
        	canvas.before: 
    			Color: 
    				rgba: (0, 0.08, 0.31, 1) 
    			Rectangle: 
    				size: self.size 
    				pos: self.pos

            #HAMILTONIAN VALUE
            BoxLayout:
                id:ham_box
        
                orientation:'horizontal'
                size_hint:0.2,0.4
                pos_hint:{'x':0.05, 'center_y': 0.5}
                
                #Text
                Label:  
        			id: spin_text
        			
        			text: "Hamiltonian: " 
        			font_size:20
        			font_name:'39335_UniversCondensed' 
        			bold: False
        			color:1, 1, 1, 1

        			halign:"center"
        			valign:"middle" #centered paragraph sentences
            
                
                Spinner:
                    id: spinner_ham
                    
                    # initially text on spinner
                    text: "H1"
                    # total values on spinner
                    values: ["H1", "H2", "H3"]
                    
                    # Callback 
                    on_text:
                        root.spinner_clicked_ham(spinner_ham.text)
          
                
  
                # declaring size of the spinner
                # and the position of it
                #size_hint: 0.05, 0.4
    		
            #SPIN VALUE
            BoxLayout:
                id:spin_box
        
                orientation:'horizontal'
                size_hint:0.1,0.4
                pos_hint:{'center_x':0.35, 'center_y': 0.5}
                
                #Text
                Label:  
        			id: spin_text
        			
        			text: "Spin = " 
        			font_size:20
        			font_name:'39335_UniversCondensed' 
        			bold: False
        			color:1, 1, 1, 1

        			halign:"center"
        			valign:"middle" #centered paragraph sentences
            
                
                Spinner:
                    id: spinner_s
                    
                    # initially text on spinner
                    text: "1"
                    # total values on spinner
                    values: ["1", "2", "3", "4", "5"]
                    
                    # Callback 
                    on_text:
                        root.spinner_clicked_s(spinner_s.text)
          
                
  
                # declaring size of the spinner
                # and the position of it
                #size_hint: 0.05, 0.4
                
        
            #SLIDERS
            GridLayout:
    			cols: 4
    			rows: 1 
        		size_hint: 0.43,0.1
        		pos_hint: {'x':0.42,'center_y':0.5}
        
                #D
                Label:
                    text: 'D = '+str(D_slider.value)
                    bold: True
                Slider:
                    id:D_slider
                    
                    value:0.01
                    min: 0.00
                    max: 0.020
                    step: 0.001
                    
                    on_value:
                        root.D=D_slider.value
                
                #alpha
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: 'a'
                        font_name: '13051_EisagoGreekSSi'
                        bold: True
                        
                    Label:
                        text: ' = '+str(alpha_slider.value)
                        bold: True
                        
                Slider:
                    id:alpha_slider
                    
                    value:0.1
                    min: 0.00
                    max: 1
                    step: 0.01
                    
                    on_value:
                        root.alpha=alpha_slider.value
        

            Button:
                id: send_btn
                
                text: "SEND"
                font_size:32
                font_name:'39335_UniversCondensed'
                bold: False
        		color: 23/255, 190/255, 255/255, 1
        		disabled: False 
        
                pos_hint: {"right":0.98,"center_y":0.5}
                size_hint_x: 0.1
                size_hint_y: 0.55
                halign:"center"
                valign:"middle"
                
                on_press:
                    root.send()

    
        #2nd MIDDLE SCREEN
        FloatLayout: 
			size_hint_x: 0.8 
			size_hint_y:0.05
			pos_hint:{"x":0.1,"y":0.62}
			
			#Sets bg color
        	canvas.before: 
    			Color: 
    				rgba: (0, 0.08, 0.31, 1) 
    			Rectangle: 
    				size: self.size 
    				pos: self.pos
    				
    				
            #HAMILTONIANS Labels
            BoxLayout:
        	    orientation: 'horizontal'
        		size_hint:0.8,0.9
        		pos_hint: {'center_x':0.5,'center_y':0.5}
        
                Image: #we put an image
    				source: "graphs/Ham_1.png"
    				allow_stretch: True
    	    		keep_ratio: False
    	    		#size_hint:0.9,0.9

    # GRAFIC
    BoxLayout:
        id:graphic_box1
        
        orientation:'vertical'
        size_hint:0.4,0.4
        pos_hint: {'x':0.05,'y':0.2}


    # BACK
    Button:
        id: back_btn
        
        text:'Back'
        font_size:44
        font_name:'00803_AbrazoScriptSSiBold'
        bold: True
    	color: 255/255, 255/255, 255/255, 1
    	disabled: False 
    	background_color: 0, 0, 0, 1
        
        pos_hint:{'left':0.8,'bottom':0.8}
        size_hint:0.1,0.1
        halign:"center"
    	valign:"middle"
        
        on_press:
            root.manager.current = 'Menu'