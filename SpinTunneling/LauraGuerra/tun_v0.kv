#:kivy 1.10.0
#:import Factory kivy.factory.Factory

<MyScreenManager>:
    StartingScreen:
    TunnelingScreen:
#    GameScreen>:

<StartingScreen>:

    name: 'starting'


    BoxLayout:
        orientation: 'vertical'
        padding: [root.width/10]

        Label:
            text: "Men√∫"

        BoxLayout:
            canvas.before:
                Color:
                    rgba: (1,1,0,0)
        #buttons
            orientation: 'vertical'
            padding: [self.width/5, 0]
            spacing: self.height/10
            size_hint_y: 2

            Button:
                id: dc_to_ys
                size_hint_y:0.2
                background_color: (0, 0, 0, 1)
                markup: True
                text: "Spin Tunneling"
                on_press: root.transition_ST()
                canvas.before:
                    Color:
                        rgba: .5, .5, .5, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height

            Button:
                id: dc_to_ss
                size_hint_y:0.2
                pos_hint_y:0.333
                background_color: (0, 0, 0, 1)
                markup: True
                text: "Game"
#                on_press: root.transition_DSS()
                canvas.before:
                    Color:
                        rgba: .5, .5, .5, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height


<TunnelingScreen>
    name: 'Tunneling'
    BoxLayout:
	    id: box
		size_hint_y: 1.5
		pos_hint: {"top":1}

	BoxLayout:
	    orientation: 'vertical'

	    id: box
		size: self.size
		pos_hint: {"top":1}

		BoxLayout:
		    orientation: 'horizontal'
		    size_hint_y: .1
		    BoxLayout:
		        TextInput:
			        orientation: 'horizontal'
			        id: alpha_text
			        multiline: False
			    Button:
			        id:alpha_button
			        text: "Envia"
			        on_press: root.alpha_value()

            Button:
		        id: H1
			    text: "H1"
                on_press: root.press_H(1)

		    Button:
		        id: H2
			    text: "H2"
			    on_release: root.press_H(2)
