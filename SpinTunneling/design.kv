<design>
    BoxLayout:
	    id: box
		size_hint_y: 1.5
		pos_hint: {"top":1}

	BoxLayout:
	    orientation: 'vertical'

	    id: box
		size: self.size
		pos_hint: {"top":1}

		BoxLayout:
		    orientation: 'horizontal'
		    size_hint_y: .1
		    BoxLayout:
		        TextInput:
			        orientation: 'horizontal'
			        id: alpha_text
			        multiline: False
			    Button:
			        id:alpha_button
			        text: "Envia"
			        on_press: root.alpha_value()

            Button:
		        id: H1
			    text: "H1"
                on_press: root.press_H(1)

		    Button:
		        id: H2
			    text: "H2"
			    on_release: root.press_H(2)
