#:kivy 1.11.1

<MyScreenManager>:
    PaquetScreen:


<PaquetScreen>:
    name: 'paquet'
    box1: box1_id
    box2: box2_id
    box3: box3_id
    box4: box4_id
    #:set color_labels 1,1,1,1

    
    #############################MAINCANVAS############################
    FloatLayout:
        id:box1_id
        orientation:'vertical'   
        size_hint:1,1
        

                
    ###########################EDITON##############################3
    RelativeLayout:
        id:box4_id
        size_hint:0.25,0.5
        pos_hint:{'y':0.,'x':0.75}
        Widget:
            canvas.before:
                Color:
                    rgba:0.1,0.1,0.1,1
                Rectangle:
            
                    pos:self.pos
                    size:self.size
    
        Label:
            text:'Edition'
            pos_hint:{'x':0.1,'y':0.9}
            size_hint:0.8,0.1
            color: color_labels
        
        Label:
            text:'px:'
            pos_hint:{'x':0.2,'y':0.8}
            size_hint:0.05,0.1
            color:color_labels
        Button:
            text:'-'
            on_press:root.changep(-1,0)
            pos_hint:{'x':0.3,'y':0.8}
            size_hint:0.2,0.1
        Button:
            text:'+'
            on_press:root.changep(1,0)
            pos_hint:{'x':0.55,'y':0.8}
            size_hint:0.2,0.1        
            
        Label:
            text:'py:'
            pos_hint:{'x':0.2,'y':0.7}
            size_hint:0.05,0.1
            color:color_labels
        Button:
            text:'-'
            on_press:root.changep(0,-1)
            pos_hint:{'x':0.3,'y':0.7}
            size_hint:0.2,0.1
        Button:
            text:'+'
            on_press:root.changep(0,1)
            pos_hint:{'x':0.55,'y':0.7}
            size_hint:0.2,0.1    
            
        Label:
            text:'Potential mode'
            pos_hint:{'x':0.05,'y':0.4}
            size_hint:0.9,0.1
        
        Button:
            text:'on'
            on_press:root.editorfun()
            pos_hint:{'x':0.05,'y':0.3}
            size_hint:0.9,0.1
        Button:
            text:'Apply'
            on_press:root.modifypot()
            pos_hint:{'x':0.05,'y':0.2}
            size_hint:0.45,0.1
        Button:
            text:'Clear'
            on_press:root.clear()
            pos_hint:{'x':0.50,'y':0.2}
            size_hint:0.45,0.1
        Button:
            text:'off'
            on_press:root.editorstop()
            pos_hint:{'x':0.05,'y':0.1}
            size_hint:0.9,0.1
        

        
    ################PARAMETERS##############################
    RelativeLayout:
        id:box3_id
        pxchange:pxchange.__self__
        pychange:pychange.__self__
        tempschange:tempschange.__self__
        longitudchange:longitudchange.__self__
        dxchange:dxchange.__self__
        dtchange:dtchange.__self__
        normachange:normachange.__self__
        energychange:energychange.__self__
        
        size_hint:0.25,0.5
        pos_hint:{'y':0.5,'x':0.75}
        Widget:
            canvas.before:
                Color:
                    rgba:0.3,0.3,0.3,1
                Rectangle:
            
                    pos:self.pos
                    size:self.size
    
        Label:
            text:'Parameters'
            pos_hint:{'x':0.1,'y':0.9}
            size_hint:0.8,0.1
            color: color_labels
            
        ##Parametres que s'han de calcular amb el buto compute
        Label:
            text:'Norma:'
            id:normachange
            pos_hint:{'x':0.25,'y':0.8}
            size_hint:0.5,0.1
            color: color_labels
        Label:
            id:energychange
            text:'Energia:'
            pos_hint:{'x':0.25,'y':0.7}
            size_hint:0.5,0.1
            color:color_labels
        Button:
            text:'Compute'
            on_press:root.compute_parameters()
            pos_hint:{'x':0.3,'y':0.57}
            size_hint:0.5,0.1
            background_normal:''
            background_color:0.6,0.6,0.6,1
            
        ##Parametres que canvien amb els butons de EDICIÃ“
        
        Label:
            id:pxchange
            text:'px:0'
            pos_hint:{'x':0.05,'y':0.4}
            size_hint:0.4,0.1
            color:color_labels
        Label:
            id:pychange
            size_hint:0.4,0.1
            text:'py:0'
            pos_hint:{'x':0.5,'y':0.4}
            color:color_labels
        Label:
            id:tempschange
            text:'temps=0.0'
            pos_hint:{'x':0.05,'y':0.22}
            size_hint:0.5,0.2
            color:color_labels
        Label:
            id:longitudchange
            text:'L=3.0'
            pos_hint:{'x':0.05,'y':0.15}
            size_hint:0.2,0.1
            color:color_labels
        Label:
            id:dtchange
            text:'dx=0.45'
            pos_hint:{'x':0.3,'y':0.15}
            size_hint:0.2,0.1
            color:color_labels
        Label:
            id:dxchange
            text:'dt=0.015'
            pos_hint:{'x':0.65,'y':0.15}
            size_hint:0.2,0.1
            color:color_labels
    BoxLayout:
        id:box2_id
        size_hint:0.75,0.1
        pos_hint:{'y':0.,'x':0}
        orientation:'horizontal'
        height:50
    

