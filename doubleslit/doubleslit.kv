#:kivy 1.0.9
#: import main doubleslit


<DoubleSlitScreen>:
    p_rectangle: p_rect
    playpause_button: pp_button
    progress_bar: p_bar
    slider_sx: sx_slider
    slider_sy: sy_slider
    slider_d: d_slider

    orientation: "vertical"
    padding: 10
    spacing: 10

    Widget:
        size_hint: (1, 0.5)
        id: p_rect

    BoxLayout:
        orientation: "horizontal"
        size_hint: (1, 0.5/3)
        spacing: 50
        padding: [50, 50, 50, 50]

        Button:
            text: "Compute"
            on_press: root.compute()
        Button:
            id: pp_button
            text: "Play/Pause"
            on_press: root.playpause()

    BoxLayout:
        orientation: "vertical"
        size_hint: (1, 0.5/3)

        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "sx"
            Slider:
                id: sx_slider
                min: 0
                max: 1

        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "sy"
            Slider:
                id: sy_slider
                min: 0
                max: 5
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "d"
            Slider:
                id: d_slider
                min: 0
                max: 7

    BoxLayout:
        size_hint: (1, 0.5/3)
        ProgressBar:
            id: p_bar
            max: 100
