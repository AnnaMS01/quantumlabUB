#:import Factory kivy.factory.Factory

<StartingScreen>:
    
    BoxLayout:
        orientation: 'horizontal'  
        spacing: 30
        padding: 20
        
        Button:
            on_press: Factory.TunnelPopup().open()      
        
           
        BoxLayout:
            orientation:'vertical'
            spacing:20
            size_hint_y : 1.5
            
            Button:
                
            BoxLayout:
                Button:
                    
                Button:
                   
            BoxLayout:
                orientation: 'vertical'
                spacing:10
                
                Button:
                    id: up
                    value: 50
                    text: 'UP'
                    size_hint_x: 0.3
                    on_press: up.value = up.value + 50
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 10
                    
                    Button:
                        id: left
                        text: 'LEFT'
                        on_press: right.value = right.value - 50
                    Button:
                        id: down
                        text: 'DOWN'
                        on_press: up.value = up.value - 50
                    Button:
                        id: right
                        value: 50
                        text: 'RIGHT'
                        on_press: right.value = right.value +50
                        
    FloatLayout:
        canvas:
            Color: 
                rgb: (1,0,0)
            Ellipse:
                pos: right.value,up.value
            
                
            
<TunnelPopup>: 
      
    title: 'Tunneling'
    box1: box1_id
    box2: box2_id
    
    BoxLayout:
        orientation: 'horizontal'
        
        BoxLayout:
            id: box1_id
                 
        BoxLayout:
            orientation:'vertical'
            size_hint_x: 0.5
            
            BoxLayout:
                id: box2_id
                
            
            Button:
                text: "Evoluci√≥"
                on_press: root.inici_evolucio()
            Button:
                text: "stop"
                on_press: root.stop_evolucio()
            
            Button:
                text: "+"
                on_press:root.add_width()
            
            Button:
                text:"-"
                on_press:root.subtract_width() 
            
            Button:
                text: "exit"
                on_press:  root.StartingScreen()       
        