<QMeasures>:

    box1: box1_id
    label1: label1_id
    label2: label2_id

    BoxLayout:
        orientation: 'vertical'
            
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
                 
            Button:
                id: measure_btn_id
                text: 'Measure'
                size_hint_x: 0.5
                on_press: root.measure()
                
            Label:
                id: label2_id
                size_hint_x: 0.2
                
            Label:
                id: label1_id
                size_hint_x: 0.3
                
        BoxLayout:
            id: box1_id
            size_hint_y_: 0.8
            
            