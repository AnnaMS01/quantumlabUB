

<Ball>:
    size: 50,50
    canvas.after:
        Ellipse:
            pos: self.pos
            size: self.size
            source: "football.png"

<Variable>:
    size: self.size

<kivycat>:
    ball1: ball_id1
    classical: classical_id
    quantum: quantum_id
    variable1: var1_id
    variable2: var2_id
    gaussian: gaussian_id
    eye: eye_id

    BoxLayout:
        orientation: "vertical"

        Label:
            size_hint_y: .2
            text_size: self.size
            halign: 'center'
            valign: 'bottom'

            text: "How are particles described?"
            font_size: 40
            bold: True

        Label:
            size_hint_y: .25
            text_size: self.size
            halign: 'center'
            valign: 'middle'

            text: "In Physics, we need to have a mathematical way to describe particles. \nHowever, it is not always done the same. \nCan you guess how we do it?"
            font_size: 17

        BoxLayout:
            orientation: "horizontal"
            size: self.size

            BoxLayout:
                orientation: "vertical"

                Label:
                    size_hint_y: .2
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

                    text: "Classical Mechanics"
                    font_size: 20
                    bold: True


                BoxLayout:
                    Widget:
                        size: self.width, self.height
                        id: classical_id

                        canvas:
                            Color:
                                rgb: 1,1,1
                            Rectangle:
                                size: 250, 3
                                pos: classical_id.width/2-125,  classical_id.height*0.6

                        Label:
                            size: 13,13
                            text: "0"
                            font_size: 18
                            text_size: self.size
                            halign: 'center'
                            valign: 'middle'
                            pos:  classical_id.width/2-13/2,  classical_id.height*0.6-20

                        Label:
                            size: 13,13
                            text: "1"
                            font_size: 18
                            text_size: self.size
                            halign: 'center'
                            valign: 'middle'
                            pos:  classical_id.width/2+70-13/2,  classical_id.height*0.6-20

                        Label:
                            size: 15,13
                            text: "-1"
                            font_size: 18
                            text_size: self.size
                            halign: 'center'
                            valign: 'middle'
                            pos:  classical_id.width/2-80-15/2+6,  classical_id.height*0.6-20


                        Variable:
                            id: var1_id
                            canvas.after:
                                Rectangle:
                                    size: 3,10
                                    pos: classical_id.width/2-2.5 + var1_id.width,  classical_id.height*0.6

                        Ball:
                            id: ball_id1
                            pos: classical_id.width/2-ball_id1.width/2 + var1_id.width,  classical_id.height*2/3*(0.6/0.5)-ball_id1.height/2
                            canvas.before:
                                Color:
                                    rgb: 1, 1, 1

                        Label:
                            size: self.size
                            text: 'In Classical mechanics we study big \nparticles. Since we can always "see" them, \nwe just use their positions to describe them.'
                            font_size: 16
                            halign: 'center'
                            valign: 'middle'
                            pos:  classical_id.width/2-47,  classical_id.height*0.6-120



                        Button:
                            id: byebut_id1
                            size: classical_id.width,classical_id.height
                            text: "(Show)"
                            on_press: classical_id.remove_widget(byebut_id1)
                            background_color: 0, 0, 0, 1



            BoxLayout:
                orientation: "vertical"

                Label:
                    size_hint_y: .2
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

                    text: "Quantum Mechanics"
                    font_size: 20
                    bold: True

                BoxLayout:

                    Widget:
                        size: self.width, self.height
                        id: quantum_id

                        canvas:
                            Color:
                                rgb: 1,1,1
                            Rectangle:
                                size: 250, 3
                                pos: quantum_id.x + quantum_id.width/2-125, quantum_id.height*0.6

                        Label:
                            size: 13,13
                            text: "0"
                            font_size: 18
                            text_size: self.size
                            halign: 'center'
                            valign: 'middle'
                            pos: quantum_id.x + quantum_id.width/2-13/2,  quantum_id.height*0.6-20

                        Label:
                            size: 13,13
                            text: "1"
                            font_size: 18
                            text_size: self.size
                            halign: 'center'
                            valign: 'middle'
                            pos: quantum_id.x + quantum_id.width/2+70-13/2,  quantum_id.height*0.6-20

                        Label:
                            size: 15,13
                            text: "-1"
                            font_size: 18
                            text_size: self.size
                            halign: 'center'
                            valign: 'middle'
                            pos: quantum_id.x + quantum_id.width/2-80-15/2+6,  quantum_id.height*0.6-20

                        Image:
                            id: gaussian_id
                            size: 250, quantum_id.height/2.3
                            pos: quantum_id.x + quantum_id.width/2 - self.width/2,  quantum_id.height*0.6 - self.height/25
                            source: "whitegaussian.png"

                        Image:
                            id: eye_id
                            size: 100, 100
                            pos: quantum_id.x + quantum_id.width/2 + 30,  quantum_id.height*0.7
                            source: "eye.png"

                        Variable:
                            id: var2_id
                            text: "hola"
                            canvas.after:
                                Rectangle:
                                    size: 3,10
                                    pos: quantum_id.x + quantum_id.width/2-52.5 + var2_id.width,  quantum_id.height*0.6

                        Label:
                            size: self.size
                            text: 'In Quantum mechanics we study small \nparticles, and we can only get their positions \nmaking high-tech measurements.'
                            font_size: 16
                            halign: 'center'
                            valign: 'middle'
                            pos:  quantum_id.x + quantum_id.width/2-47,  quantum_id.height*0.6-120

                        Label:
                            size: self.size
                            text: 'What we always know, though, is the \nprobability of their positions. So we use \nthe wave function to describe them.'
                            font_size: 16
                            halign: 'center'
                            valign: 'middle'
                            pos:  quantum_id.x + quantum_id.width/2-47,  quantum_id.height*0.6-190

                        Button:
                            id: byebut_id2
                            size: quantum_id.width, quantum_id.height
                            pos: quantum_id.pos
                            text: "(Show)"
                            on_press: quantum_id.remove_widget(byebut_id2)
                            background_color: 0, 0, 0, 1

<wavefunScreen>:
    BoxLayout:
        Button:
            text: "Wave function."
